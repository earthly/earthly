{
  "baseRecipe": [
    {
      "command": {
        "args": [
          "alpine:3.18"
        ],
        "name": "FROM"
      }
    }
  ],
  "targets": [
    {
      "name": "test",
      "recipe": [
        {
          "command": {
            "args": [
              "TEST_IN_DOTENV"
            ],
            "name": "ARG"
          }
        },
        {
          "command": {
            "args": [
              "TEST_ARG_1",
              "=",
              "incorrect"
            ],
            "name": "ARG"
          }
        },
        {
          "command": {
            "args": [
              "test",
              "\"$TEST_ARG_1\"",
              "==",
              "\"abracadabra\""
            ],
            "name": "RUN"
          }
        },
        {
          "command": {
            "args": [
              "--secret",
              "MY_SECRET=+secrets/TEST_SEC_2",
              "test",
              "\"$MY_SECRET\"",
              "==",
              "\"foo\""
            ],
            "name": "RUN"
          }
        },
        {
          "command": {
            "args": [
              "--secret",
              "MY_SECRET=TEST_SEC_2",
              "test",
              "\"$MY_SECRET\"",
              "==",
              "\"foo\""
            ],
            "name": "RUN"
          }
        },
        {
          "command": {
            "args": [
              "test",
              "\"$TEST_ARG_3\"",
              "==",
              "\"\""
            ],
            "docs": "Not pre-declared - should not be overriden by .env.\n",
            "name": "RUN"
          }
        },
        {
          "command": {
            "args": [
              "test",
              "-z",
              "\"$TEST_IN_DOTENV\""
            ],
            "name": "RUN"
          }
        }
      ]
    },
    {
      "name": "test-no-dotenv",
      "recipe": [
        {
          "command": {
            "args": [
              "TEST_ARG_1",
              "=",
              "missing"
            ],
            "name": "ARG"
          }
        },
        {
          "command": {
            "args": [
              "test",
              "\"$TEST_ARG_1\"",
              "==",
              "\"missing\""
            ],
            "name": "RUN"
          }
        },
        {
          "command": {
            "args": [
              "true"
            ],
            "name": "RUN"
          }
        }
      ]
    },
    {
      "name": "test-with-push",
      "recipe": [
        {
          "command": {
            "args": [
              "EARTHLY_PUSH"
            ],
            "name": "ARG"
          }
        },
        {
          "command": {
            "args": [
              "test",
              "\"$EARTHLY_PUSH\"",
              "=",
              "\"true\""
            ],
            "name": "RUN"
          }
        }
      ]
    },
    {
      "name": "test-no-push",
      "recipe": [
        {
          "command": {
            "args": [
              "EARTHLY_PUSH"
            ],
            "name": "ARG"
          }
        },
        {
          "command": {
            "args": [
              "test",
              "\"$EARTHLY_PUSH\"",
              "=",
              "\"false\""
            ],
            "name": "RUN"
          }
        }
      ]
    }
  ],
  "version": {
    "args": [
      "0.7"
    ]
  }
}
