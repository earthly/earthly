{
  "baseRecipe": [
    {
      "command": {
        "args": [
          "alpine:3.18"
        ],
        "name": "FROM"
      }
    },
    {
      "command": {
        "args": [
          "/test"
        ],
        "name": "WORKDIR"
      }
    }
  ],
  "targets": [
    {
      "name": "test",
      "recipe": [
        {
          "command": {
            "args": [
              "addgroup",
              "-S",
              "testgroup"
            ],
            "name": "RUN"
          }
        },
        {
          "command": {
            "args": [
              "adduser",
              "-S",
              "-G",
              "testgroup",
              "testuser"
            ],
            "name": "RUN"
          }
        },
        {
          "command": {
            "args": [
              "--chown=testuser:testgroup",
              "./a.txt",
              "./"
            ],
            "name": "COPY"
          }
        },
        {
          "command": {
            "args": [
              "ls",
              "-al"
            ],
            "name": "RUN"
          }
        },
        {
          "command": {
            "args": [
              "test",
              "testuser",
              "==",
              "$(stat -c %U ./a.txt)"
            ],
            "name": "RUN"
          }
        },
        {
          "command": {
            "args": [
              "test",
              "testgroup",
              "==",
              "$(stat -c %G ./a.txt)"
            ],
            "name": "RUN"
          }
        },
        {
          "command": {
            "args": [
              "testuser"
            ],
            "name": "USER"
          }
        },
        {
          "command": {
            "args": [
              "ls",
              "-al"
            ],
            "name": "RUN"
          }
        },
        {
          "command": {
            "args": [
              "test",
              "-O",
              "./a.txt"
            ],
            "name": "RUN"
          }
        },
        {
          "command": {
            "args": [
              "test",
              "-G",
              "./a.txt"
            ],
            "name": "RUN"
          }
        }
      ]
    }
  ],
  "version": {
    "args": [
      "0.7"
    ]
  }
}
