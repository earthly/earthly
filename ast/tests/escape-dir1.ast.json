{
  "baseRecipe": [
    {
      "command": {
        "args": [
          "alpine:3.18"
        ],
        "name": "FROM"
      }
    }
  ],
  "targets": [
    {
      "name": "test",
      "recipe": [
        {
          "command": {
            "args": [
              "./dir-with-\\+-in-it+test/file.txt",
              "./"
            ],
            "name": "COPY"
          }
        },
        {
          "command": {
            "args": [
              "test",
              "\"test\"",
              "==",
              "\"$(cat ./file.txt)\""
            ],
            "name": "RUN"
          }
        }
      ]
    }
  ],
  "version": {
    "args": [
      "0.7"
    ]
  }
}
