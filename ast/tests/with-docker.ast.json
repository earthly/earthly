          "command": {
            "args": [
              "/$name"
            ],
            "name": "WORKDIR"
          }
        },
        {
          "command": {
            "args": [
              "echo",
              "\"hello $var\"",
              ">def.txt"
            ],
            "name": "RUN"
          }
        },
        {
          "command": {
            "args": [
              "cat",
              "/$name/def.txt",
              "&&",
              "pwd"
            ],
            "name": "ENTRYPOINT"
          }
        },
        {
          "command": {
            "args": [
              "test-${name}-img:xyz"
            ],
            "name": "SAVE IMAGE"
          }
        }
      ]
