    {
      "name": "one-target-many-names",
      "recipe": [
        {
          "with": {
            "body": [
              {
                "command": {
                  "args": [
                    "docker",
                    "images",
                    "&&",
                    "docker",
                    "run",
                    "a:latest",
                    "&&",
                    "echo",
                    "\"-----\"",
                    "&&",
                    "docker",
                    "run",
                    "b:latest",
                    "&&",
                    "echo",
                    "\"-----\"",
                    "&&",
                    "docker",
                    "run",
                    "c:latest",
                    "uname",
                    "-a"
                  ],
                  "name": "RUN"
                }
              }
            ],
            "command": {
              "args": [
                "--load",
                "a:latest=+multi-from-one",
                "--load",
                "b:latest=+multi-from-one",
                "--load",
                "c:latest=+multi-from-two"
              ],
              "name": "DOCKER"
            }
          }
        }
      ]
    },
