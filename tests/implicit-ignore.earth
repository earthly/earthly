VERSION 0.5 # This test is only valid for 0.5; --no-implicit-ignore was enabled in 0.6
FROM alpine:3.13
WORKDIR /test

all:
    COPY . .
    # Earthfile and .earthlyignore not should be COPY-able unless --no-implicit-ignore was set
    RUN ! ls Earthfile
    RUN ! ls .earthlyignore
    RUN ls notignored/
    RUN ! ls ignored/
