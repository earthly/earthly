VERSION --use-registry-for-with-docker 0.6

all:
    ARG FRONTEND=docker
    ARG FRONTEND_COMPOSE="docker compose"
    BUILD +test

fetch:
    FROM alpine:3.10
    RUN apk add curl
    COPY fetch.sh /bin/fetch
    CMD ["/bin/fetch"]

test:
    LOCALLY
    ARG FRONTEND=docker
    ARG FRONTEND_COMPOSE="docker compose"
    WITH DOCKER \
            --compose docker-compose.yml \
            --service webserver \
            --load fetch:latest=+fetch
        RUN $FRONTEND_COMPOSE up --exit-code-from fetch fetch | grep 'Hello World'
    END
