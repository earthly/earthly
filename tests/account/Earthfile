VERSION --pass-args 0.7
PROJECT earthly-technologies/core

FROM --pass-args ../..+earthly-integration-test-base

IMPORT .. AS tests

WORKDIR /test

test:
    BUILD +test-login

test-login:
    COPY test-login.sh .
    RUN \
        --secret USER1_TOKEN=test-user1/token \
        --secret USER2_TOKEN=test-user2/token \
        --secret USER2_SSH_KEY=test-user2/ssh-key \
        ./test-login.sh
