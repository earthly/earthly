VERSION --wildcard-builds --build-auto-skip 0.8

FROM alpine

wildcard-build:
    BUILD ./wildcard/*+test

wildcard-globstar:
    BUILD ./wildcard/**/*+test

wildcard-glob:
    BUILD ./wildcard/b*[rz]+test

wildcard-remote:
    BUILD github.com/earthly/test-remote/wildcard:ido-wildcard-copy+wildcard-build

wildcard-remote-glob:
    BUILD github.com/earthly/test-remote/wildcard:ido-wildcard-copy+wildcard-glob

wildcard-build-pwd:
    BUILD ./*+test

wildcard-build-rel-dir:
    BUILD ../../tmp/other-dir/*+test

wildcard-build-auto-skip:
    BUILD --auto-skip ./*+test
