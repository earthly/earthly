VERSION 0.8
# This tests that the env variables from the base image are available under the target
FROM alpine:3.18

test:
    ENV MYPATH=hello:$PATH
    RUN echo $MYPATH | grep bin

test-multiple-on-single-env:
    ENV VAR1=value1
    ENV VAR2=value2
    ENV VAR3=value3

    RUN env

    RUN test "$VAR1" = "value1"
    RUN test "$VAR2" = "value2"
    RUN test "$VAR3" = "value3"
