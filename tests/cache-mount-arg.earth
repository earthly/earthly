VERSION 0.7
a-nomount:
    FROM alpine:3.15
    RUN echo Doing something 1

b-nomount:
    FROM +a-nomount
    ARG MYARG
    RUN echo Doing something 2

a:
    FROM alpine:3.15
    RUN --mount=type=cache,target=/cache echo Doing something 1

b:
    FROM +a
    ARG MYARG
    RUN echo Doing something 2

a-with-arg:
    FROM alpine:3.15
    ARG MYARG
    RUN --mount=type=cache,target=/cache echo Doing something 1

b-with-arg:
    FROM +a-with-arg
    ARG MYARG
    RUN echo Doing something 2
