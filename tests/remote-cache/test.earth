VERSION                             \
--check-duplicate-images            \
--ci-arg                            \
--earthly-git-author-args           \
--earthly-locally-arg               \
--earthly-version-arg               \
--explicit-global                   \
--git-commit-author-timestamp       \
--new-platform                      \
--no-tar-build-output               \
--shell-out-anywhere                \
--use-cache-command                 \
--use-chmod                         \
--use-copy-link                     \
--use-host-command                  \
--use-no-manifest-list              \
--use-pipelines                     \
--use-project-secrets               \
#--wait-block                        \
0.6


ARG --global REGISTRY

test1:
    FROM alpine:3.15
    RUN echo "execute-test1-run-before-copy"
    COPY ./input ./
    RUN echo "execute-test1-run-after-copy"
    SAVE IMAGE --push --insecure $REGISTRY/test1:latest

test2-base:
    FROM node:13.10.1-alpine3.11
    WORKDIR /js-example

test2-deps:
    FROM +test2-base
    COPY test2/package.json test2/package-lock.json ./
    RUN npm install
    SAVE ARTIFACT package-lock.json

test2-build:
    FROM +test2-deps
    COPY test2/src src
    COPY test2/dist dist
    RUN npx webpack
    SAVE ARTIFACT dist

test2:
    FROM +test2-deps
    COPY +test2-build/dist ./dist
    EXPOSE 8080
    ENTRYPOINT ["/js-example/node_modules/http-server/bin/http-server", "./dist"]
    SAVE IMAGE --push --insecure $REGISTRY/test2:latest

# Smoke test for --cache-hint.
test3:
    FROM alpine:3.15
    RUN echo "content" >./file.txt
    SAVE IMAGE --cache-hint
