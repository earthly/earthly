{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'default:pinDigestsDisabled',
  ],
  configMigration: true,
  prHourlyLimit: 1,
  prConcurrentLimit: 3,
  includePaths: [
    'Earthfile',
    'docs/**',
    '.github/**',
    'release/**',
  ],
  enabledManagers: [
    'regex',
    'github-actions',
  ],
  customManagers: [
    {
      customType: 'regex',
      fileMatch: [
        '.+.md',
      ],
      matchStrings: [
        'earthly/releases/download/(?<currentValue>.+?)/',
        '- uses: earthly/actions/setup-earthly@.*?[\\s\\n]+.*?[\\s\\n]+with:[\\s\\n]*version: (?<currentValue>.+?)[\\s\\n/]+',
        "'earthly/earthly:(?<currentValue>.+?)'",
        'github.com/earthly/earthly:(?<currentValue>.+?)(\\+|`)',
        '(:|\\s+)earthly/earthly:(?<currentValue>.+?)[\\s\\n/]+',
        'the `latest` tag is `(?<currentValue>.+?)`',
        'earthly/compare/(?<currentValue>.+?)\\.\\.\\.main',
      ],
      depNameTemplate: 'earthly/earthly',
      datasourceTemplate: 'github-releases',
    },
    {
      customType: 'regex',
      fileMatch: [
        'Earthfile',
      ],
      matchStrings: [
        'datasource=(?<datasource>.*?) depName=(?<depName>.*?)[\\s\\n]+ARG .*?_version=(?<currentValue>.*)[\\n\\s]+',
      ]
    },
  ],
  labels: [
    'renovate',
  ],
  packageRules: [
    {
      matchPackageNames: [
        'earthly/earthly',
      ],
      matchDatasources: [
        'github-releases',
      ],
      addLabels: [
        'earthly-version-in-docs',
      ],
    },
  ],
}
