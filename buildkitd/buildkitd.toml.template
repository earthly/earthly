  snapshotter = "auto"
  gc = true
  networkMode = "${NETWORK_MODE}"
  cniBinaryPath = "/usr/libexec/cni"
  cniConfigPath = "/etc/cni/cni-conf.json"
  ${CACHE_SETTINGS}

