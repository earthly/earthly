FROM alpine:3.11 #The image to use
WORKDIR /test #the work dir

test: #the target
    RUN echo "hello world" > /my-file
    RUN cat /my-file
    RUN test \
        # --version \       
        -f /my-file
    RUN ! test \
               \ # comment after empty continuation
        -f /file-which-doesnt-exist

