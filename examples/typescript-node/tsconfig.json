{
  "compilerOptions": {
    "target": "es2020",
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": ["src/**/*"],
  "compileOnSave": true,
}
